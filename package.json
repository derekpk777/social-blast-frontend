import React from 'react';
import ReactDOM from 'react-dom/client';
import App from './App';
import './index.css';

const root = ReactDOM.createRoot(document.getElementById('root'));
root.render(<App />);
@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  font-family: system-ui, sans-serif;
}
import { useState } from 'react';
import Feed from './Feed';
import './index.css';

const platforms = ['Facebook','Threads','TikTok','Instagram','X','Reddit'];

export default function App() {
  const [message, setMessage] = useState('');
  const [selected, setSelected] = useState([]);
  const [status, setStatus] = useState('');
  const [view, setView] = useState('composer');

  const toggle = (p) => {
    setSelected(prev => prev.includes(p) ? prev.filter(x => x!==p) : [...prev,p]);
  };

  const handleBlast = async () => {
    const res = await fetch(`${process.env.REACT_APP_BACKEND_URL}/blast`,{
      method:'POST',
      headers:{'Content-Type':'application/json'},
      body:JSON.stringify({message,platforms:selected})
    });
    const data = await res.json();
    setStatus(`‚úÖ Blasted to: ${data.platforms.join(', ')}`);
  };

  return (
    <div className="min-h-screen bg-gradient-to-r from-purple-400 to-orange-300 flex items-center justify-center p-4">
      <div className="bg-white rounded-xl shadow-xl p-8 w-full max-w-xl space-y-6">
        <div className="flex justify-between">
          <button onClick={()=>setView('composer')} className="font-bold">‚úçÔ∏è Composer</button>
          <button onClick={()=>setView('feed')} className="font-bold">üì¢ Feed</button>
        </div>
        {view === 'composer' ? (
          <>
            <textarea
              className="w-full p-4 border rounded-lg resize-none"
              rows="4"
              placeholder="Write your post..."
              value={message}
              onChange={e=>setMessage(e.target.value)}
            />
            <div className="flex flex-wrap gap-2 justify-center">
              {platforms.map(p=>(
                <button key={p} onClick={()=>toggle(p)}
                  className={`px-4 py-2 rounded-full border ${selected.includes(p)?'bg-purple-500 text-white':'bg-gray-100'}`}>
                  {p}
                </button>
              ))}
            </div>
            <button onClick={handleBlast}
              className="w-full py-3 bg-gradient-to-r from-purple-600 to-pink-500 text-white font-bold rounded-lg">
              üöÄ Blast It!
            </button>
            {status && <p className="text-green-600 text-center font-semibold">{status}</p>}
          </>
        ) : (
          <Feed />
        )}
      </div>
    </div>
  );
}
import { useEffect, useState } from 'react';

export default function Feed() {
  const [posts, setPosts] = useState([]);
  const [filter, setFilter] = useState({ topic: '', sender: '', orgSize: '' });

  useEffect(() => {
    fetch(`${process.env.REACT_APP_BACKEND_URL}/feed`)
      .then(res => res.json())
      .then(data => setPosts(data));
  }, []);

  const filteredPosts = posts.filter(p =>
    (!filter.topic || p.topicTags.includes(filter.topic)) &&
    (!filter.sender || p.sender === filter.sender) &&
    (!filter.orgSize || p.organizationSize === filter.orgSize)
  );

  return (
    <div className="p-6">
      <h2 className="text-2xl font-bold mb-4">üì¢ Social Feed</h2>
      <div className="flex gap-4 mb-4">
        <select onChange={e => setFilter({ ...filter, topic: e.target.value })}>
          <option value="">All Topics</option>
          <option value="AI">AI</option>
          <option value="Healthcare">Healthcare</option>
          <option value="Startups">Startups</option>
        </select>
        <select onChange={e => setFilter({ ...filter, sender: e.target.value })}>
          <option value="">All Senders</option>
          {posts.map(p => <option key={p.id} value={p.sender}>{p.sender}</option>)}
        </select>
        <select onChange={e => setFilter({ ...filter, orgSize: e.target.value })}>
          <option value="">All Sizes</option>
          <option value="small">Small</option>
          <option value="large">Large</option>
        </select>
      </div>
      <div className="space-y-4">
        {filteredPosts.map(p => (
          <div key={p.id} className="p-4 bg-white rounded shadow">
            <p className="text-sm text-gray-500">{p.platform} ‚Ä¢ {p.timestamp}</p>
            <p className="font-bold">{p.sender}</p>
            <p>{p.content}</p>
            <p className="text-xs text-purple-600">Tags: {p.topicTags.join(', ')}</p>
          </div>
        ))}
      </div>
    </div>
  );
}
